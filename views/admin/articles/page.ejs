<%- include("../../partials/header.ejs") %>
<body>
<%- include("../../partials/homenavbar.ejs") %>
<div class="container">
    <hr>
    <% result.articles.rows.forEach(article=>{ %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Read article</a>
            </div>
        </div>
        <br>
    <% }) %>
    <div class="row">
        <div class="col col-12">
            <a href="/articles/page/<%= result.page -1  %>" style="float:left">Previous page</a>

            <%  if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>" style="float:right">Next page</a>
                <%  }else{ %>
                
                <%  } %>
        </div>
    </div>
    <hr>
</div>
</body>
<%- include("../../partials/footer.ejs") %>
